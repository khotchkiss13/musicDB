<body bgcolor="#f5f5f5">
    <div class="mdl-grid">
      <div class="mdl-layout__content">
        <a name="top"></a>

        <div class="mdb-input-form">
          <div class="mdb-info-title">
            <div class="mdb-large-text"><%= @release.name %></div>
            <div class="mdb-result-id">Release ID: <%= @release.id %></div>
          </div>
          <div class="mdb-line-separator" style="margin-top: 10px; margin-bottom: 30px"></div>
          <div class="mdb-info-sections">
            <div class="mdb-section-title mdl-typography--text-uppercase">About</div>
            <div class="mdb-section-info">Artist:</div>
            <%= link_to @release.group.name, group_path(@release.group), :class => "mdb-section-link" %><br>
            <div class="mdb-section-info">Release date:</div>
            <div class="mdb-section-desc"><%= @release.date.to_formatted_s(:long) %></div>
            <% if !@release.record_label.nil? %>
                <div class="mdb-section-info">Distributed by:</div>
                <%= link_to @release.record_label.name, record_label_path(@release.record_label), :class => "mdb-section-link" %><br>
            <% end %>
            <% if !@release.media_type.nil? %>
                <div class="mdb-section-info">Media Type:</div>
                <div class="mdb-section-desc"><%= @release.media_type %></div>
            <% end %>
            <% if !@release.total_length.nil? %>
                <div class="mdb-section-info">Total Length:</div>
                <div class="mdb-section-desc"><%= @release.total_length.to_s %></div>
            <% end %>
            <% if !@release.copies_sold.nil? %>
                <div class="mdb-section-info">Copies Sold:</div>
                <div class="mdb-section-desc"><%= @release.copies_sold.to_s %></div>
            <% end %>
            <% if !@release.total_profit.nil? %>
                <div class="mdb-section-info">Total Profit:</div>
                <div class="mdb-section-desc"><%= @release.total_profit.to_s %></div>
            <% end %>
            <% if !@release.medium.nil? %>
                <div class="mdb-section-info">Medium:</div>
                <div class="mdb-section-desc"><%= @release.medium %></div>
            <% end %>
            <% if !@release.certification.nil? %>
                <div class="mdb-section-info">Certification:</div>
                <div class="mdb-section-desc"><%= @release.certification %></div>
            <% end %>
            <div class="mdb-section-title mdl-typography--text-uppercase" style="margin-top: 35px">Other</div>
            <div class="mdb-section-info">Track List:</div>
            <% @tracks.each do |track| %>
                <%= link_to (track.track_number.to_s+". "+track.name), song_path(track.song), :class => "mdb-section-link" %><br>
            <% end %>
            
            <%= link_to "+ Add Track", '/input/trackinput', :class => "mdb-add-link", :method => :get %>

          </div>
            
        </div>
      </div>
    </div>
</body>